{% extends 'Admin/home.html.twig' %}

{% block main %}
	{% for category in categories %}
		<h1>{{ category.name }}</h1>
		<p>{{ category.description }}</p>
		{% for article in category.articles %}

			<h3>{{ article.title }}</h3>

		{% endfor %}
		<h3>
			<a href=" {{ path('adminCategoryUpdate', {'id': category.id}) }} ">Modifier</a>
		</h3>
		<h3>
			<a href=" {{ path('adminCategoryDelete', {'id' : category.id}) }} ">Supprimer</a>
		</h3>

	{% endfor %}
	<a href=" {{ path('adminCategoryCreate')}} ">
		<h1>Creer une nouvelle categorie</h1>
	</a>
{% endblock %}
